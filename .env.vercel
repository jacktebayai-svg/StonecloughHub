# Vercel Environment Variables for Stoneclough Hub
# Copy these to your Vercel dashboard under Settings â†’ Environment Variables

# Application
NODE_ENV=production
APP_URL=https://stoneclough-hub.vercel.app
PORT=3000

# Database (Supabase) - UPDATE WITH YOUR ACTUAL VALUES
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DIRECT_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase Authentication - UPDATE WITH YOUR ACTUAL VALUES
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
SUPABASE_SERVICE_KEY=[YOUR-SERVICE-ROLE-KEY]

# Client-side Supabase (for Vite) - UPDATE WITH YOUR ACTUAL VALUES
VITE_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
VITE_SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
VITE_API_URL=https://stoneclough-hub.vercel.app

# Authentication (Optional)
SESSION_SECRET=your-super-secure-session-secret-here
JWT_SECRET=your-super-secure-jwt-secret-here

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM=noreply@stoneclough.uk

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info

# External APIs (Optional)
BOLTON_COUNCIL_API_URL=https://www.bolton.gov.uk
GOOGLE_MAPS_API_KEY=[YOUR-GOOGLE-MAPS-API-KEY]
POSTCODE_API_URL=https://api.postcodes.io
