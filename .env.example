# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DIRECT_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
SUPABASE_SERVICE_KEY=[YOUR-SERVICE-ROLE-KEY]

# Client-side Supabase (for Vite)
VITE_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
VITE_SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME=true

# Application Configuration
VITE_APP_NAME=Stoneclough Hub
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Community hub for Stoneclough
VITE_APP_URL=https://stoneclough-hub.vercel.app

# Cache Configuration
VITE_CACHE_TIMEOUT=300000
VITE_MAX_CACHE_SIZE=100

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# Authentication
GOOGLE_CLIENT_ID=[YOUR-GOOGLE-CLIENT-ID]
GOOGLE_CLIENT_SECRET=[YOUR-GOOGLE-CLIENT-SECRET]
SESSION_SECRET=[RANDOM-SECRET-STRING]
JWT_SECRET=[YOUR-SUPER-SECURE-JWT-SECRET]

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=[YOUR-EMAIL@gmail.com]
SMTP_PASS=[YOUR-APP-PASSWORD]
SMTP_FROM=noreply@stoneclough-hub.com

# Application URLs
APP_URL=https://your-app.vercel.app
API_URL=http://localhost:5000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
BOLTON_COUNCIL_API_URL=https://www.bolton.gov.uk
GOOGLE_MAPS_API_KEY=[YOUR-GOOGLE-MAPS-API-KEY]
POSTCODE_API_URL=https://api.postcodes.io

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=

# Port (for local development)
PORT=5000

# Environment
NODE_ENV=production
